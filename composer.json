{
	"name": "sunkan/console-select",
	"description": "A fancy selection interface for symfony's console component.",
	"keywords": [
		"library",
		"symfony",
		"console",
		"cli",
		"select",
		"checkbox",
		"radio"
	],
	"type": "library",
	"authors": [
		{
			"name": "eddiriarte",
			"email": "eddiriarte@gmail.com"
		},
		{
			"name": "sunkan",
			"email": "andreas@stefna.is"
		}
	],
	"license": "MIT",
	"minimum-stability": "stable",
	"require": {
		"php": "^8.0",
		"symfony/console": "^5.0 || ^6.0 || ^7.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0 || ^10.0",
		"phpstan/phpstan": "^2.0",
		"squizlabs/php_codesniffer": "^3.9",
		"stefna/codestyle": "^1.12"
	},
	"autoload": {
		"psr-4": {
			"EddIriarte\\Console\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"code-coverage": "phpunit --coverage-html=builds/phpunit/ --log-junit builds/logs/phpunit.xml"
	}
}
